<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/neon"
    tools:context=".ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <ImageView
        android:id="@+id/trofeo"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="-80dp"
        android:shadowColor="@color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:src="@drawable/beginer" />

    <TextView
        android:id="@+id/DisplayNivel"
        android:layout_width="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/trofeo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:button="@android:color/transparent"
        android:elevation="4dp"
        android:freezesText="true"
        android:singleLine="false"
        android:text="nivel"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6"/>


    <TextView
        android:id="@+id/displayPuntos"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="points"
        android:button="@android:color/transparent"
        android:background="@drawable/radio_normal3"
        android:textColor="@color/default_radio_button_background"
        android:elevation="4dp"
        android:textStyle="bold"
        app:strokeWidth="3dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_below="@id/DisplayNivel"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:freezesText="true"
        android:shadowColor="@color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/displayErrores"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="errors"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/radio_normal3"
        android:button="@android:color/transparent"
        android:textColor="@color/incorrect_answer_background"
        android:elevation="4dp"
        android:gravity="center"
        android:layout_below="@id/displayPuntos"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:freezesText="true"
        android:shadowColor="@color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/displayScore"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="score"
        android:background="@drawable/radio_normal3"
        android:textStyle="bold"
        android:gravity="center"
        android:button="@android:color/transparent"
        android:textColor="@color/correct_answer_background"
        android:textSize="16sp"
        android:elevation="4dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/displayErrores"
        android:layout_centerHorizontal="true"
        android:freezesText="true"
        android:shadowColor="@color/white"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="6"/>


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/displayScore"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/jugarotravez"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:text="PLAY "
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowDx="4"
            android:layout_marginRight="30dp"
            android:shadowDy="4"
            android:shadowRadius="6"
            app:strokeWidth="3dp" />

        <Button
            android:id="@+id/salir"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:shadowDx="4"
            android:shadowDy="4"
            android:textColor="@color/white"
            android:shadowRadius="6"
            android:text="EXIT"
            android:textStyle="bold"
            app:strokeWidth="3dp" />

    </LinearLayout>

</RelativeLayout>
</ScrollView>