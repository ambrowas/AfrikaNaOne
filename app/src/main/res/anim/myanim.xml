<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Start growing from original size to 150% -->
    <scale
        android:fromXScale="1"
        android:toXScale="1.25"
        android:fromYScale="1"
        android:toYScale="1.25"
        android:duration="2900"
        android:pivotY="50%"
        android:pivotX="50%" />

    <!-- Spin 360 degrees over 1 second -->
    <rotate
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="2900"
        android:duration="1100" />

    <!-- Scale back down to original size smoothly after spin -->
    <scale
        android:fromXScale="1.25"
        android:toXScale="1"
        android:fromYScale="1.25"
        android:toYScale="1"
        android:startOffset="4000"
        android:duration="2900"
        android:pivotY="50%"
        android:pivotX="50%"
        android:fillAfter="true" />


</set>
