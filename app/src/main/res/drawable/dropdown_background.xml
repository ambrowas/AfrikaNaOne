<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <!-- Background color -->
            <corners android:radius="4dp"/> <!-- Corner radius -->
            <stroke android:width="1dp" android:color="@color/black"/> <!-- Border color -->
        </shape>
    </item>
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Background color -->
            <corners android:radius="4dp"/> <!-- Corner radius -->
            <stroke android:width="2dp" android:color="@color/black"/> <!-- Border color for focus -->
        </shape>
    </item>
</selector>

