<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Border Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Border Color -->
            <corners android:radius="30dp"/> <!-- Rounded Corners -->
        </shape>
    </item>

    <!-- Inner Button Layer -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColor"/> <!-- Button Background -->
            <corners android:radius="25dp"/> <!-- Inner Corners -->
        </shape>
    </item>

</layer-list>